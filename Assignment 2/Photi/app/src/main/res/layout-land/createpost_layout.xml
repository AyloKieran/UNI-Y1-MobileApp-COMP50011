<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/box"
    >

    <ImageView
        android:id="@+id/imgImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/posttitle"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:textStyle="bold|italic"
        android:textColorHint="@color/title"
        android:textColor="@color/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgImage"
        app:layout_constraintRight_toRightOf="parent"
 />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:hint="@string/postdescription"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColorHint="@color/description"
        android:textColor="@color/description"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintLeft_toRightOf="@id/imgImage"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/postlocation"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/title"
        app:layout_constraintTop_toBottomOf="@id/txtDescription"
        app:layout_constraintLeft_toRightOf="@id/imgImage"
        app:layout_constraintRight_toLeftOf="@id/imgMap"
        />

    <TextView
        android:id="@+id/txtLoc"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/postlatitude_and_longitude"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/description"
        app:layout_constraintTop_toBottomOf="@id/txtLocation"
        app:layout_constraintLeft_toRightOf="@id/imgImage"
        app:layout_constraintRight_toLeftOf="@id/imgMap"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMap"
        android:src="@drawable/map"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/txtLocation"
        app:layout_constraintLeft_toRightOf="@+id/txtLocation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtLoc"
        />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/post_photo"
        app:layout_constraintLeft_toRightOf="@id/imgImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>